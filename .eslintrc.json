{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "parserOptions": {
    "allowImportExportEverywhere": true
  },
  "rules": {
    "func-names": ["error", "never"],
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single",
      { "allowTemplateLiterals": true }
    ]
  }
}
